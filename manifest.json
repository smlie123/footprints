{
  "manifest_version": 3,
  "name": "Footprints â€“ Web Highlighter, Annotation & Thought Notes",
  "version": "1.2.0",
  "description": "a tool that helps you highlight text, add contextual notes, and record your thoughts directly on any webpage.",
  "permissions": [
    "sidePanel",
    "unlimitedStorage",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css", "iconfont/iconfont.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["iconfont/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Footprints"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
