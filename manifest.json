{
  "manifest_version": 3,
  "name": "Footprints",
  "version": "1.0",
  "description": "Every thought leaves a footprint.",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css", "iconfont/iconfont.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["iconfont/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Footprints"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
